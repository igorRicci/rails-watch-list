<div class="container mt-3">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h3>My lists</h3>
      <div class="cards mb-3">
        <% @lists.each do |list| %>
          <%= link_to list_path(list) do %>
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url( <%= list.photo.attached? ? cl_image_path(list.photo.key) : asset_path('camera.jpg') %>)">
              <%= list.name %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
